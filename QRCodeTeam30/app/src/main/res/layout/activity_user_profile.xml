<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewclass.reusableactivity.UserProfileActivity"
    android:orientation="vertical"
    android:background="@drawable/background">
    <include layout="@layout/toolbar_logout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="italic"
            android:fontFamily="@font/montserrat_bold"
            android:id="@+id/textView_userProfile"/>

        <Button
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_userProfile_viewAllQRCode"
            android:text="\nVIEW ALL QR CODE\n"
            android:fontFamily="@font/comedysketchdemoregular"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:backgroundTint="@color/blue3"/>

        <Button
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_userProfile_deleteUserServerOnly"
            android:text="\nDELETE USER IN THIS SERVER ONLY\n"
            android:layout_gravity="center"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"/>


        <Button
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_userProfile_deleteUser"
            android:text="\nDELETE USER\n"
            android:fontFamily="@font/comedysketchdemoregular"
            android:textSize="20sp"

            android:layout_gravity="center"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"/>

    </LinearLayout>


</LinearLayout>