<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_listview2"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAuthor_viewallcomment_listview_content"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:textStyle="italic"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDate_viewallcomment_listview_content"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="16sp"
        android:textStyle="italic"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewContent_viewallcomment_listview_content"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="20sp"/>


</LinearLayout>